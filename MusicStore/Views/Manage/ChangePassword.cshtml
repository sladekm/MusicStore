@model MusicStore.ViewModels.Manage.ManageChangePasswordVM

@{
    ViewData["Title"] = "ChangePassword";
}

@if (Model.PasswordChanged)
{
    <h1>Your password was successfuly changed</h1>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to account information</a>
    </div>
}
else
{
    <h1>Change password</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="ChangePassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CurrentPassword" class="control-label"></label>
                    <input asp-for="CurrentPassword" class="form-control" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewPasswordConfirmation" class="control-label"></label>
                    <input asp-for="NewPasswordConfirmation" class="form-control" />
                    <span asp-validation-for="NewPasswordConfirmation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Change password" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}