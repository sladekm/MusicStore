@model MusicStore.ViewModels.Checkout.CheckoutSummaryVM

@{
    ViewData["Title"] = "Summary";
}

<h1>Summary</h1>
<hr />
<div>
    <h4>Billing information</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PostalCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
</div>
<div>
    <h4>Shopping cart</h4>
    <hr />
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Album</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Album.Title</td>
                    <td>
                        @item.Quantity
                    </td>
                    <td>@item.Album.Price.ToString("c")</td>
                    <td>@((item.Album.Price * item.Quantity).ToString("c"))</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3"><strong>Total: </strong></td>
                <td><strong>@Model.CartTotal.ToString("c")</strong></td>
            </tr>
        </tfoot>
    </table>
</div>
<div>
    <form asp-action="Summary" method="post">
        <input type="hidden" asp-for="@Model.Email" class="form-control" />
        <input type="hidden" asp-for="@Model.FirstName" class="form-control" />
        <input type="hidden" asp-for="@Model.LastName" class="form-control" />
        <input type="hidden" asp-for="@Model.Address" class="form-control" />
        <input type="hidden" asp-for="@Model.City" class="form-control" />
        <input type="hidden" asp-for="@Model.State" class="form-control" />
        <input type="hidden" asp-for="@Model.PostalCode" class="form-control" />
        <input type="hidden" asp-for="@Model.Country" class="form-control" />
        <input type="hidden" asp-for="@Model.PhoneNumber" class="form-control" />
        <input type="submit" value="Place order" class="btn btn-success" aria-hidden="true">
    </form>
</div>
