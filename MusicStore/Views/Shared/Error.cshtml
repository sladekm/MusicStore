@{
    ViewData["Title"] = "Error";
}

@if (ViewBag.ErrorTitle == null)
{
    <h1>Error</h1>
}
else
{
    <h1>@ViewBag.ErrorTitle</h1>
}


@if (ViewBag.ErrorMessage == null)
{
    <p>An error occurred while processing your request. The support team is notified and working on the fix</p>
    <p>Please contact us at admin@localhost.com</p>
}
else
{
    <p>@ViewBag.ErrorMessage</p>
}

